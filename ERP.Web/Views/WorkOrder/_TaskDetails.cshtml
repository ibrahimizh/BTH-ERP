            <div class="col-md-12">
                <h6>Item No : @Model.WorkOrderItemId</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>Item : @Model.Item</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>Specification : @Model.Specification</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>Description : @Model.Description</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>Assigned to : @Model.EmployeeName</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>Target Date: @Model.TargetDate</h6>
            </div>
        </div>
