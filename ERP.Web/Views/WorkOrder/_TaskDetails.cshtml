                    <div class="input-group date datetimepicker" id="datetimepicker1" data-target-input="nearest">
                        <input type="text" asp-for="@Model.CompletedDate" class="form-control datetimepicker datetimepicker-input txtTaskCompletedDate"  data-target="#datetimepicker1" />
